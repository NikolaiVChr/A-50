    <path>Aircraft/A-50/Models/Interior/Seat/seat.xml</path>
    <offsets>
      <x-m> -19.19 </x-m>
      <y-m>  -0.60 </y-m>
      <z-m>  -2.32 </z-m>
    </offsets>
  </model>
  
  <!-- Engineer seat-->
  <model>
    <path>Aircraft/A-50/Models/Interior/Seat/seat.xml</path>
    <offsets>
      <x-m> -17.59 </x-m>
      <y-m>   0.50 </y-m>
      <z-m>  -2.32 </z-m>
      <heading-deg> -90 </heading-deg>
    </offsets>
  </model>
  
  <!-- Copilote seat-->
  <model>
    <path>Aircraft/A-50/Models/Interior/Seat/seat.xml</path>
